@page
@model Dawson_HW4.Pages.Categories.CannedFoodsModel

@{
    ViewData["Title"] = "Canned Foods"; // It's good practice to set the title
}

<h1>@ViewData["Title"]</h1>

@if (Model.ProdList != null && Model.ProdList.Any())
{
    <div class="row">
        @foreach (var product in Model.ProdList)
        {
            <div class="col-md-4 mb-3">
                @* Updated anchor tag to link to the Product Details page *@
                <a asp-page="/Products/Details" asp-route-id="@product.ProductID" class="card h-100 text-decoration-none text-dark">
                    @* Consider using product.ProdImage if you have it,
            otherwise keep the placeholder or add logic for a default image.
            Example: <img src="@(string.IsNullOrEmpty(product.ProdImage) ? Url.Content("~/fruits.jpg") : Url.Content(product.ProdImage))" class="card-img-top" alt="@product.ProductName" />
            *@
                    <img src="~/fruits.jpg" class="card-img-top" alt="@product.ProductName" />
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        @* You could add more brief details here if desired, like price *@
                        @* <p class="card-text">@product.ListPrice.ToString("C")</p> *@
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <p>No Can Foods found.</p>
}